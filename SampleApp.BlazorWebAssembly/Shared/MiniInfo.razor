
@if (ShowRerenderInfo?.Value == true)
{
    <div class="text-muted position-absolute" style="font-size: .5em; right: @((IsSecondary ? "20em" : "2em")); top: 0">
        @Name
        @DateTime.TimeOfDay
    </div>
}

@code {
    [Parameter]
    public String Name { get; set; } = null!;

    [Parameter]
    public Boolean IsSecondary { get; set; }

    [Parameter]
    public DateTime DateTime { get; set; }

    [CascadingParameter]
    public ShowRerenderInfoContext? ShowRerenderInfo { get; set; }
}